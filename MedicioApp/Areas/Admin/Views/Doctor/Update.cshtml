@using Medicio.Core.Models;

@model Doctor
<div class="container">
    <div class="row">
        <form method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" style="color:red"></span>

            </div>
            <div class="mb-3">
                <label asp-for="Position" class="form-label">Position</label>
                <input asp-for="Position" class="form-control">
                <span asp-validation-for="Position" style="color:red"></span>

            </div>
            <div class="mb-3">
                <label asp-for="Position" class="form-label">Position</label>
                <input asp-for="PhotoFile" class="form-control">
                <span asp-validation-for="PhotoFile" style="color:red"></span>

            </div>
            <div asp-validation-summary="All"></div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>