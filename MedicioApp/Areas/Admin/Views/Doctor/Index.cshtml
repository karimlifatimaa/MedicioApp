@using Medicio.Core.Models;

@model List<Doctor>
@{
    int count = 1;
}
<div class="container">
    <h1>
        Doctors
    </h1>
    <a class="btn btn-primary" asp-action="Create" asp-controller="Doctor">Create</a>
</div>
<div class="container">
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Position</th>
                    <th scope="col">Image<th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <th scope="row">@count</th>
                        <td>@item.Name</td>
                        <td>@item.Position</td>
                        <td><img width="100px" src="/Uploads/Doctor/@item.ImgUrl" class="img-fluid" alt="alternativ photo"></td>
                        <td>
                            <a class="btn btn-danger" asp-action="Delete" asp-controller="Doctor" asp-route-id=@item.Id>Delete</a>
                            <a class="btn btn-info" asp-action="Update" asp-controller="Doctor" asp-route-id=@item.Id>Update</a>
                        </td>

                        
                        
                    </tr>
                    count++;
                }

            </tbody>
        </table>
    </div>
</div>